{
  "extends": "@mizu/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "lib": ["ESNext"],
    "target": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
