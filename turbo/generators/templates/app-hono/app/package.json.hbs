{
  "name": "{{ name }}-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run dev:setup && bun run dev:serve",
    "dev:serve": "NODE_ENV=development bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "prod:release": "NODE_ENV=production bun run prod:setup && bun run start",
    "prod:setup": "bun run db:generate && bun run db:deploy",
    "dev:setup": "bun run db:generate && bun run db:migrate",
    "db:migrate": "bun run --env-file=../../../apps/{{ name }}/.env --cwd ../../packages/{{ name }}/repository db:migrate",
    "db:generate": "bun run --filter @mizu/{{ name }}-repository db:generate",
    "db:deploy": "bun run --filter @mizu/{{ name }}-repository db:deploy"
  },
  "dependencies": {
    "@mizu/logger": "workspace:*",
    "@mizu/{{ name }}-config": "workspace:*",
    "@mizu/{{ name }}-domain": "workspace:*",
    "@mizu/{{ name }}-repository": "workspace:*",
    "@mizu/{{ name }}-service": "workspace:*",
    "@mizu/{{ name }}-trpc": "workspace:*",
    "@hono/trpc-server": "^0.3.4",
    "@trpc/server": "^11.1.2",
    "hono": "^4.7.0",
    "superjson": "^2.2.2"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/bun": "^1.3.4"
  }
}

